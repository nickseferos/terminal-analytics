<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="main-wrapper">
		<div class="page-wrapper full-page">
			<div class="page-content d-flex align-items-center justify-content-center">

				<div class="row w-100 mx-0 auth-page">
					<div class="col-md-8 col-xl-6 mx-auto">
						<div class="card">
							<div class="row">
                <div class="col-md-4 pr-md-0">
                  <div class="auth-left-wrapper">
                  </div>
                </div>
                <div class="col-md-8 pl-md-0">
                  <div class="auth-form-wrapper px-4 py-5">
                    <%= link_to "TerminalAnalytics", root_path, class: 'noble-ui-logo d-block mb-2' %>
                    <h5 class="text-muted font-weight-normal mb-4">Welcome back! Log in to your account.</h5>
                    <form class="forms-sample">
                      <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
                      </div>
                      <% if devise_mapping.rememberable? %>
                      <div class="form-check form-check-flat form-check-primary">
                        <label class="form-check-label">
                          <%= f.check_box :remember_me, class: 'form-check-input' %>
                          Remember me
                        <i class="input-frame"></i></label>
                      </div>
                      <% end %>
                      <div class="mt-3">
                        <%= f.submit "Login", class: 'btn btn-primary mr-2 mb-2 mb-md-0' %>
                      </div>
                      <%= link_to 'Not a user? Sign up', new_user_registration_path, class: 'd-block mt-3 text-muted' %>
                    </form>
                  </div>
                </div>
              </div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
<% end %>
