<h3>Vessels at <%= current_user.terminal.name %> <%= link_to 'Create New Port Call', new_port_call_path, class:'btn btn-outline-primary btn-lg' %></h3></br>
<% if @current_port_calls.present? %>
<div class="col-md-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
			<h6 class="card-title">Current Vessels <%= link_to 'Create New Call', new_port_call_path, class: 'btn btn-light' %></h6>
			<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Vessel &amp; Voyage</th>
								<th>First Line</th>
								<th>Est. Departure</th>
								<th>Total Discharge</th>
                <th>Total Load</th>
                <th>Total Re-Handles</th>

							</tr>
						</thead>
						<tbody>
              <% @current_port_calls.each do |port_call| %>
                <tr>
                  <td><%= port_call.voyage.vessel.name %> <%= port_call.voyage.number %></td>
                  <td><%= port_call.first_line %></td>
                  <td><%= port_call.atd %></td>
                  <td><%= port_call.total_discharge %></td>
                  <td><%= port_call.total_load %></td>
                  <td><%= port_call.total_rehandle %></td>
                  <td>
                    <div class="btn-group">
                      <%= link_to 'Show', port_call, class: 'btn btn-secondary' %>
                      <%= link_to 'Edit', edit_port_call_path(port_call), class: 'btn btn-light' %>
                      <%= link_to 'Destroy', port_call, method: :delete, data: { confirm: 'This vessel has arrived. Are you sure you wish to delete? Any counts or tracking of operators will be removed from the database.' }, class: 'btn btn-danger' %>
                    </div>
                  </td>
                </tr>
              <% end %>
						</tbody>
					</table>
			</div>
    </div>
  </div>
</div>
<% end %>
